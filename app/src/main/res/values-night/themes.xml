<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CodingLand" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item> <!-- 기본 텍스트 크기 -->
        <item name="android:textColor">#000000</item> <!-- 기본 텍스트 색상 -->
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>


    <style name="Theme.CodingLand" parent="Base.Theme.CodingLand" />

    <style name="AppTheme.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.CodingLand</item>
    </style>

</resources>
