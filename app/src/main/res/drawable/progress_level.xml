<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="760dp"/>
            <solid android:color="@color/gray9"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="760dp"/>
                <gradient
                    android:angle="0"
                    android:endColor="@color/level_progress_end"
                    android:startColor="@color/level_progress_start" />
            </shape>
        </scale>
    </item>
</layer-list>