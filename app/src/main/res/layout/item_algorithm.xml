<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iv_biginner_problem_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/item_algorithm_frame_iv"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/iv_background_quiz3" />

            <ImageButton
                android:id="@+id/ib_biginner_problem_3_hint_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:adjustViewBounds="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/iv_bulb_gray"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/item_algorithm_frame_iv"
                app:layout_constraintEnd_toEndOf="@+id/item_algorithm_frame_iv" />

            <ImageView
                android:id="@+id/ib_biginner_problem_3_hint_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/iv_biginner_quiz3_hint"
                app:layout_constraintBottom_toBottomOf="@+id/ib_biginner_problem_3_hint_off"
                app:layout_constraintEnd_toStartOf="@+id/ib_biginner_problem_3_hint_off"
                app:layout_constraintTop_toTopOf="@+id/ib_biginner_problem_3_hint_off" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/iv_biginner_answer_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_biginner_problem_3">


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/btn_biginner_problem3_answer1_off"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_checked_quiz"
                android:paddingStart="18dp"
                android:text="1. 도구를 이용해 문제를 해결하는 방법"
                android:textColor="@color/gray3"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer1_on"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_square_rounded_16dp_stroke_gray"
                android:paddingStart="18dp"
                android:text="1. 도구를 이용해 문제를 해결하는 방법"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer2_off"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_checked_quiz"
                android:paddingStart="18dp"
                android:text="2. 컴퓨터가 문제를 해결하도록 명령하는 절차"
                android:textColor="@color/gray3"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer2_on"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_square_rounded_16dp_stroke_gray"
                android:paddingStart="18dp"
                android:text="2. 컴퓨터가 문제를 해결하도록 명령하는 절차"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer3_off"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_checked_quiz"
                android:paddingStart="18dp"
                android:text="3. 컴퓨터가 실행할 수 있는 게임 만들기"
                android:textColor="@color/gray3"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer3_on"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_square_rounded_16dp_stroke_gray"
                android:paddingStart="18dp"
                android:text="3. 컴퓨터가 실행할 수 있는 게임 만들기"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer4_off"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_checked_quiz"
                android:paddingStart="18dp"
                android:text="4. 데이터를 저장하는 방법"
                android:textColor="@color/gray3"
                android:textSize="14sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:id="@+id/btn_biginner_problem3_answer4_on"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_square_rounded_16dp_stroke_gray"
                android:paddingStart="18dp"
                android:text="4. 데이터를 저장하는 방법"
                android:textColor="@color/gray3"
                android:textSize="14sp"
                android:visibility="gone"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

