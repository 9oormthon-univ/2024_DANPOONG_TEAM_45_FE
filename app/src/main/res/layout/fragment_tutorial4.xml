<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_tutorial1_background"
        android:background="#95000000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_tutorial_msg4"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/ib_gameplay_when_start_btn"
            app:layout_constraintTop_toBottomOf="@+id/ib_gameplay_when_start_btn" />

        <ImageView
            android:id="@+id/gameplay_background"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/iv_gameplay_layout_background_2"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/ib_gameplay_when_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="@+id/gameplay_background"
            app:layout_constraintStart_toStartOf="@+id/gameplay_background"
            app:layout_constraintEnd_toEndOf="@+id/gameplay_background"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/iv_game_btn_start" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>